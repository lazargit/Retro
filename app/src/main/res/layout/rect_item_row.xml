<?xml version="1.0" encoding="utf-8"?>
<com.shamildev.retro.ui.layout.SquareLayout
    android:id="@+id/square_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewRectItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="left"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/material_flat" />

    <TextView
        android:id="@+id/vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textColor="@color/amber_200"
        android:textColorLink="@color/amber_200"
        android:textSize="18sp"
        android:textStyle="bold" />


</com.shamildev.retro.ui.layout.SquareLayout>